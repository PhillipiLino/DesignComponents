<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.phillipilino.viewpager.loopViewPager.LoopViewPager
        android:id="@+id/loop_view_pager"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="0dp"
        android:paddingEnd="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_text_position"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/loop_view_pager"
        app:layout_constraintEnd_toEndOf="@+id/loop_view_pager"
        app:layout_constraintTop_toTopOf="@+id/loop_view_pager" />

    <TextView
        android:id="@+id/pager_text"
        style="@style/DSTextStyle.Bold.H3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/loop_view_pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_text_position"
        app:layout_constraintTop_toTopOf="@+id/loop_view_pager" />
</androidx.constraintlayout.widget.ConstraintLayout>